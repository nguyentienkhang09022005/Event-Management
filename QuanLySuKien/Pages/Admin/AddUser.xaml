<Window x:Class="Demo1.Pages.Admin.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo1.Pages.Admin"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="AddUser" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="Transparent" AllowsTransparency="True"
        ResizeMode="NoResize" WindowState="Normal">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Lime.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border CornerRadius="30">
        <Border.Background>
            <LinearGradientBrush StartPoint="0, 0.35" EndPoint="0.5,1">
                <GradientStop Color="#FFDEE9" Offset="0"/>
                <GradientStop Color="#B5FFFC" Offset="0.5"/>
                <GradientStop Color="#FFDEE9" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width ="0.25*"/>
                <ColumnDefinition Width ="2*"/>
                <ColumnDefinition Width ="0.25*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0" Height="30" Orientation="Horizontal" FlowDirection="RightToLeft">
                <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton"/>
                <Button x:Name="btnMinimize" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource minimize}" Click="btnMinimize_Click"/>
            </StackPanel>
            <Border Background="#FAFAFA" Grid.Row="1" Grid.Column="1" CornerRadius="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Thêm Người Dùng" Foreground="#6A0DAD" FontSize="27" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    <!-- Thông tin-->
                    <StackPanel Grid.Row="1"  Margin="50 0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.7*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Canvas  HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Ellipse Name="ImageEllipse" Width="175" Height="175" Fill="White" Canvas.Left="-110" Canvas.Top="-100"/>
                                </Canvas>
                                <Button Name="txtAvtChange" Width="125" Height="30" Background="#6A0DAD" Foreground="#FFFFFF" Content="Đổi ảnh đại diện" FontSize="12"
                                        FontWeight="SemiBold" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0 10 50 0" Style="{StaticResource MaterialDesignFlatLightBgButton}" Click="txtAvtChange_Click"/>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Họ và tên"
                                 materialDesign:HintAssist.FloatingOffset="0 -20"
                                 BorderBrush="#c5c8ff"
                                 BorderThickness="0 0 0 1.5"
                                 Margin="0 15 15 0"
                                 IsReadOnly="False"/>
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="txtMSSV" Grid.Column="0" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="MSSV/MSGV"
                                     materialDesign:HintAssist.FloatingOffset="0 -20"
                                     BorderBrush="#c5c8ff"
                                     Margin="0 15 15 15"
                                     BorderThickness="0 0 0 1.5"
                                     IsReadOnly="False"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Giới Tính: " Style="{StaticResource MaterialDesignButtonTextBlock}"  VerticalAlignment="Center" FontSize="17"/>
                                        <RadioButton x:Name="RadioBtnNam" GroupName="Gender" VerticalAlignment="Center" FontWeight="DemiBold"  Content="Nam" FontSize="17" Margin="0,0,0,0">
                                            <RadioButton.Resources>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Width" Value="20"/>
                                                    <Setter Property="Height" Value="20"/>
                                                    <Setter Property="Stroke" Value="Black"/>
                                                    <Setter Property="StrokeThickness" Value="2"/>
                                                </Style>
                                            </RadioButton.Resources>
                                        </RadioButton>
                                        <RadioButton GroupName="Gender" Name="RadioBtnNu" VerticalAlignment="Center" FontWeight="DemiBold" Content="Nữ" FontSize="17" Margin="15 0 0 0">
                                            <RadioButton.Resources>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Width" Value="20"/>
                                                    <Setter Property="Height" Value="20"/>
                                                    <Setter Property="Stroke" Value="Black"/>
                                                    <Setter Property="StrokeThickness" Value="2"/>
                                                </Style>
                                            </RadioButton.Resources>
                                        </RadioButton>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox x:Name="txtKhoa" Grid.Column="0" Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                      materialDesign:HintAssist.Hint="Khoa"
                                      materialDesign:HintAssist.FloatingOffset="0 -20"
                                      BorderBrush="#c5c8ff"
                                      Margin="0 15 15 15"
                                      BorderThickness="0 0 0 1.5">
                                        <ComboBoxItem Content="Công Nghệ Phần Mềm" />
                                        <ComboBoxItem Content="Hệ Thống Thông Tin" />
                                        <ComboBoxItem Content="Khoa Học Máy Tính" />
                                        <ComboBoxItem Content="Kỹ Thuật Máy Tính" />
                                        <ComboBoxItem Content="Mạng Máy Tính Và Truyền Thông" />
                                        <ComboBoxItem Content="Khoa Học Và Kỹ Thuật Thông Tin" />
                                    </ComboBox>
                                    <ComboBox x:Name="txtRole" Grid.Column="1" Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                      materialDesign:HintAssist.Hint="Vai Trò"
                                      materialDesign:HintAssist.FloatingOffset="0 -20"
                                      BorderBrush="#c5c8ff"
                                      Margin="0 15 15 15"
                                      BorderThickness="0 0 0 1.5">
                                        <ComboBoxItem Content="Admin" />
                                        <ComboBoxItem Content="Sinh Viên" />
                                        <ComboBoxItem Content="Người Đăng Bài" />
                                    </ComboBox>
                                </Grid>
                                <TextBox x:Name="txtSDT" Grid.Row="3" Grid.Column="1" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                         materialDesign:HintAssist.Hint="Số điện thoại"
                                         materialDesign:HintAssist.FloatingOffset="0 -20"
                                         BorderBrush="#c5c8ff"
                                         Margin="0 15 15 15"
                                         BorderThickness="0 0 0 1.5"/>
                                <Grid Grid.Row="4" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="txtEmail" Grid.Column="0" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                             materialDesign:HintAssist.Hint="Gmail"
                                             materialDesign:HintAssist.FloatingOffset="0 -20"
                                             BorderBrush="#c5c8ff"
                                             Margin="0 15 15 15"
                                             BorderThickness="0 0 0 1.5"/>
                                    <PasswordBox x:Name="txtPassword" Grid.Column="1" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                                 materialDesign:HintAssist.Hint="Mật khẩu"
                                                 materialDesign:HintAssist.FloatingOffset="0 -20"
                                                 BorderBrush="#c5c8ff"
                                                 Margin="0 15 15 15"
                                                 BorderThickness="0 0 0 1.5"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </StackPanel>
                    <Grid Grid.Row="2" Margin="0 30">
                        <Button x:Name="btnXacnhan" Width="150" Background="#6A0DAD" Foreground="#FFFFFF" Grid.Row="7" Grid.Column="1" Content="Xác nhận" Cursor="Hand" Style="{StaticResource MaterialDesignFlatLightBgButton}" Click="btnXacnhan_Click"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>