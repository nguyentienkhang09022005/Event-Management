            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.65*"/>
                </Grid.RowDefinitions>
                <Border Background="Transparent" Grid.Row="0" CornerRadius="15" Margin="5">
