                                    <DataTrigger Binding="{Binding Converter={StaticResource DateInListConverter}, ConverterParameter={StaticResource SpecialDates}}" Value="True">
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Calendar.Resources>
                    </Calendar>
                </Viewbox>
            </Border>
                <Border Background="WhiteSmoke" Grid.Row="1" CornerRadius="25" Margin="5 15 5 5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10">
                        <StackPanel>
                            <TextBlock Text="Sự kiện đã đăng ký: " FontSize="16" FontWeight="Bold" Margin="5"/>
                            <ItemsControl ItemsSource="{Binding RegisteredEvents}" AlternationCount="2">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="5 0 0 0"  Padding="5" Margin="3">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="BorderBrush" Value="Gray"/>
                                                    <Style.Triggers>
                                                        <!-- Nếu AlternationIndex = 0 (chẵn) -->
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter}, Path=(ItemsControl.AlternationIndex)}" Value="0">
                                                            <Setter Property="BorderBrush" Value="LightBlue"/>
                                                        </DataTrigger>
                                                        <!-- Nếu AlternationIndex = 1 (lẻ) -->
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter}, Path=(ItemsControl.AlternationIndex)}" Value="1">
                                                            <Setter Property="BorderBrush" Value="LightGreen"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Title}" FontSize="13" FontWeight="Bold"/>
                                                    <TextBlock FontSize="11" Foreground="Gray">
                                                            <Run Text="Từ" />
