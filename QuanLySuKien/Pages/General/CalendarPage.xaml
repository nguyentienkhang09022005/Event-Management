                                                            <Run Text="{Binding Path=EventStartDate, StringFormat={}{0:dd/MM/yyyy}}" />
                                                            <Run Text="Đến" />
                                                            <Run Text="{Binding Path=EventEndTime}" />
                                                            <Run Text="{Binding Path=EventEndDate, StringFormat={}{0:dd/MM/yyyy}}" />
                                                    
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Organizer}" FontSize="11"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
