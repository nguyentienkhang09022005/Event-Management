                                                    <Run Text="{Binding Path=EventEndDate, StringFormat={}{0:dd/MM/yyyy}}" />       
                                                </TextBlock>
                                                <TextBlock Text="{Binding Organizer}" FontSize="14"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
