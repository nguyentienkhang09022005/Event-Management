<Window x:Class="Demo1.Pages.SignUp.SignUpPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo1.Pages.SignUp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="SignUpPage" Height="720" Width="1080" WindowStyle="None"
        AllowsTransparency="True" 
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        FontSize="19">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Lime.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border CornerRadius="30">
        <Border.Background>
            <LinearGradientBrush StartPoint="-0.2, 0" EndPoint="1,1">
                <GradientStop Color="#F6DEE6" Offset="0"/>
                <GradientStop Color="#8EC5FC" Offset="0.5"/>
                <GradientStop Color="#F6DEE6" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="0.6*"/>
                        <RowDefinition Height="0.4*"/>
                    </Grid.RowDefinitions>
                <Button x:Name="BackButton"
        Content="Back"
        Style="{StaticResource MaterialDesignFlatButton}"
        Width="100"
        Height="40"
        Background="Transparent"
        Foreground="#6A0DAD"
        FontSize="16"
        FontWeight="Bold"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="10"
        materialDesign:ButtonAssist.CornerRadius="20"
        Click="BackButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Icon -->
                                <Path Data="M10,20 L20,10 30,20"
                      Stroke="#6A0DAD"
                      StrokeThickness="2"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Margin="10,0,0,0"
                      Width="10"
                      Height="10" />
                                <!-- Text -->
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Canvas Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse Name="ImageEllipse" Width="250" Height="250" Fill="#F7F7F7" Canvas.Left="-125" Canvas.Top="-125"/>
                    </Canvas>
                    <Button Grid.Row="2" Name="txtAvtChange" Width="260" Height="70" Content="Đổi ảnh đại diện" FontSize="29"
                        FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center" Click="txtAvtChange_Click"/>
            </Grid>
                <Border Background="Transparent" Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0">
                        <StackPanel Grid.Row="0" Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0" Height="30" Orientation="Horizontal" FlowDirection="RightToLeft">
                            <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton"/>
                            <Button x:Name="btnMinimize" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource minimize}" Click="btnMinimize_Click"/>
                        </StackPanel>
                    </DockPanel>
                    <TextBlock Grid.Row="1" Text="Thông tin đăng ký" Foreground="#6A0DAD" FontSize="45" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    <!-- Thông tin-->
                    <StackPanel Grid.Row="2" VerticalAlignment="Center" Margin="75 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBox x:Name="txtName" Grid.Row="0" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Họ và tên"
                                 materialDesign:HintAssist.FloatingOffset="0 -20"
                                 BorderBrush="#c5c8ff"
                                 BorderThickness="0 0 0 1.5"/>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtMSSV" Grid.Column="0" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="MSSV/MSGV"
                                     materialDesign:HintAssist.FloatingOffset="0 -20"
                                     BorderBrush="#c5c8ff"
                                     Margin="0 20"
                                     BorderThickness="0 0 0 1.5"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Giới Tính: " Style="{StaticResource MaterialDesignButtonTextBlock}"  VerticalAlignment="Center" FontSize="20"/>
                                    <RadioButton x:Name="RadioBtnNam" GroupName="Gender" VerticalAlignment="Center" FontWeight="DemiBold"  Content="Nam" FontSize="20" Margin="0,0,0,0">
                                        <RadioButton.Resources>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Width" Value="20"/>
                                                <Setter Property="Height" Value="20"/>
                                                <Setter Property="Stroke" Value="Black"/>
                                                <Setter Property="StrokeThickness" Value="2"/>
                                            </Style>
                                        </RadioButton.Resources>
                                    </RadioButton>
                                    <RadioButton GroupName="Gender" Name="RadioBtnNu" VerticalAlignment="Center" FontWeight="DemiBold" Content="Nữ" FontSize="20" Margin="15 0 0 0">
                                        <RadioButton.Resources>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Width" Value="20"/>
                                                <Setter Property="Height" Value="20"/>
                                                <Setter Property="Stroke" Value="Black"/>
                                                <Setter Property="StrokeThickness" Value="2"/>
                                            </Style>
                                        </RadioButton.Resources>
                                    </RadioButton>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <PasswordBox x:Name="txtPassWord" Grid.Column="0" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     materialDesign:HintAssist.Hint="Mật Khẩu"
                                     materialDesign:HintAssist.FloatingOffset="0 -20"
                                     BorderBrush="#c5c8ff"
                                     Margin="0 20"
                                     BorderThickness="0 0 0 1.5"/>
                                <PasswordBox x:Name="txtAgainPassWord" Grid.Column="1" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     materialDesign:HintAssist.Hint="Nhập lại mật khẩu"
                                     materialDesign:HintAssist.FloatingOffset="0 -20"
                                     BorderBrush="#c5c8ff"
                                     Margin="0 20"
                                     BorderThickness="0 0 0 1.5"/>
                            </Grid>
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtSDT" Grid.Column="0" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                         materialDesign:HintAssist.Hint="Số điện thoại"
                                         materialDesign:HintAssist.FloatingOffset="0 -20"
                                         BorderBrush="#c5c8ff"
                                         Margin="0 20"
                                         BorderThickness="0 0 0 1.5"/>
                                <ComboBox x:Name="txtKhoa" Grid.Column="1" Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                           Text ="{Binding Khoa}"
                                           materialDesign:HintAssist.Hint="Khoa"
                                           materialDesign:HintAssist.FloatingOffset="0 -20"
                                           BorderBrush="#c5c8ff"
                                           Margin="0 20"
                                           BorderThickness="0 0 0 1.5">
                                    <ComboBoxItem Content="Công Nghệ Phần Mềm" />
                                    <ComboBoxItem Content="Hệ Thống Thông Tin" />
                                    <ComboBoxItem Content="Khoa Học Máy Tính" />
                                    <ComboBoxItem Content="Kỹ Thuật Máy Tính" />
                                    <ComboBoxItem Content="Mạng Máy Tính Và Truyền Thông" />
                                    <ComboBoxItem Content="Khoa Học Và Kỹ Thuật Thông Tin" />
                                </ComboBox>
                            </Grid>
                            <TextBox x:Name="txtGmail" Grid.Row="4" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Gmail"
                                 materialDesign:HintAssist.FloatingOffset="0 -20"
                                 BorderBrush="#c5c8ff"
                                 Margin="0 20"
                                 BorderThickness="0 0 0 1.5"/>
                        </Grid>
                    
                    </StackPanel>
                    <Button Grid.Row="3" x:Name="btnSignUp"
                        Content="Đăng Ký"
                        Background="#6A0DAD"
                        Foreground="#FFFFFF"
                        FontSize="18"
                        Width="130" Height="45"
                        materialDesign:ButtonAssist.CornerRadius="22"
                        Style="{StaticResource MaterialDesignFlatButton}" Click="btnSignUp_Click">
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
