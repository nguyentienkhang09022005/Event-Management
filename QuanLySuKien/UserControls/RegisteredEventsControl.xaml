<UserControl x:Class="Demo1.Pages.General.RegisteredEventsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo1.Pages.General"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="15">
        <Frame x:Name="PagesNavigation" NavigationUIVisibility="Hidden" />
        <TextBlock Text="SỰ KIỆN ĐÃ ĐĂNG KÝ:" Foreground="{StaticResource TitlePrimaryColor}" FontSize="20" FontWeight="Bold" Margin="10"/>
        <ItemsControl ItemsSource="{Binding RegisteredEvents}">
            <ItemsControl.ItemsPanel>
                <!-- Sử dụng WrapPanel để xếp các item trong cùng một hàng -->
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Left" Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="12" Margin="5" Width="180" Height="220">
                        <StackPanel>
                            <Image Source="{Binding ImagePath}" Width="180" Height="120" Stretch="Fill">
                                <Image.Clip>
                                    <RectangleGeometry Rect="0,0,180,120" RadiusX="12" RadiusY="12"/>
                                </Image.Clip>
                            </Image>
                            <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0,10,0,0"/>
                            <TextBlock Text="{Binding Date}" TextAlignment="Center" Foreground="Gray"/>
                            <TextBlock Text="{Binding Organizer}" TextAlignment="Center" Foreground="Gray"/>
                            <TextBlock Text="CHI TIẾT..." Foreground="Blue" TextAlignment="Center" Margin="0,5,0,0"  Cursor="Hand" MouseLeftButtonDown="EventDetails_Click"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
