<UserControl x:Class="Demo1.Pages.Admin.UsersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo1.Pages.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DataGrid x:Name="userGrid" AutoGenerateColumns="False" CanUserAddRows="False" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10, 50, 10, 10">
        <DataGrid.Columns>
            <!-- Avatar Column -->

            <!-- Full Name Column -->
            <DataGridTextColumn Header="Họ và tên" Binding="{Binding FullName}" Width="200"/>

            <!-- Phone Column -->
            <DataGridTextColumn Header="Số điện thoại" Binding="{Binding Phone}" Width="150"/>

            <!-- Email Column -->
            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>

            <!-- Department Column -->
            <DataGridTextColumn Header="Khoa" Binding="{Binding Department}" Width="150"/>

            <!-- Edit Column -->
            <DataGridTemplateColumn Header="Chỉnh sửa" Width="100">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Edit" Margin="5"/>
                            <Button Content="Delete" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
